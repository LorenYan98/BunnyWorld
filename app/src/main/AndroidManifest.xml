<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.stanford.cs108.bunnyworld">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BunnyWorld">
        <activity
            android:name=".SelectGameToPlay"
            android:exported="false"
            android:label="Select Game to Play"/>
        <activity
            android:name=".SelectGameToEdit"
            android:exported="false"
            android:label="Create New Game or Select Game to Edit"/>
        <activity
            android:name=".ChooseGameOrEditor"
            android:exported="true"
            android:label="Choose Game Player or Game Editor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name=".EditorActivity"
            android:exported="false"
            android:label="Game Editor"/>
        <activity
            android:name=".GameActivity"
            android:exported="false"
            android:label="Game Player"/>
        <activity
            android:name=".ScriptActivity"
            android:exported="false"
            android:label="Edit/Add Script"/>
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>